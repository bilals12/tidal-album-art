{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "global-setup.mjs"],
  "exclude": ["node_modules", "dist"]
}